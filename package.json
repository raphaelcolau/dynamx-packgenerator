{
  "name": "dynamx-tools",
  "version": "1.0.0",
  "description": "Tools for parsing, updating and selling dynamx package",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "ncc build -o dist/lib ./src/index.js && pkg --target node18-win-x64 -o dist/PackManager.exe ./dist/lib/index.js"
  },
  "pkg": {
    "assets": [
      "src/**/*",
      "package.json",
      "package-lock.json",
      "node_modules/**/*"
    ],
    "targets": [
      "node18",
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "bin": {
    "DynamX-PackManager": "src/index.js"
  },
  "author": "Raphael Colau",
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.1",
    "chalk": "^5.3.0",
    "glob": "^10.3.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-top-level-await": "^7.14.5"
  }
}
