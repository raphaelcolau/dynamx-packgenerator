{
  "name": "dynamx-package-manager",
  "version": "1.0.0",
  "description": "Tools for parsing, updating and selling dynamx package",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pkg .",
    "winbuild": "node ./win-build/win-build.js"
  },
  "pkg": {
    "assets": [
      "src/**/*",
      "package.json",
      "package-lock.json",
      "node_modules/**/*"
    ],
    "targets": [
      "node18",
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist",
    "outputName": "PackManager"
  },
  "bin": {
    "DynamX-PackManager": "src/index.js"
  },
  "author": "Raphael Colau",
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.1",
    "chalk": "^4.1.2",
    "glob": "^10.3.1"
  },
  "devDependencies": {
    "@angablue/exe": "^1.2.0",
    "@babel/plugin-syntax-top-level-await": "^7.14.5"
  }
}
